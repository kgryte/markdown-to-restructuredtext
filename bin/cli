#!/usr/bin/env node
'use strict';

// MODULES //

var fs = require( 'fs' );
var path = require( 'path' );
var parseArgs = require( 'minimist' );
var notifier = require( 'update-notifier' );
var pkg = require( './../package.json' );
var opts = require( './opts.json' );
var md2rst = require( './../lib' );


// VARIABLES //

var outFile;
var inFile;
var args;


// FUNCTIONS //

/**
* FUNCTION: onClose()
*	Callback invoked upon writing a file to `stdout`.
*
* @private
*/
function onClose() {
	process.exit( 0 );
}


// INIT //

process.stdout.on( 'error', process.exit );


// PACKAGE UPDATES //

notifier( { 'pkg': pkg } ).notify();


// ARGUMENTS //

args = parseArgs( process.argv.slice( 2 ), opts );


// HELP //

if ( args.help ) {
	fs.createReadStream( path.join( __dirname, 'usage.txt' ) )
		.pipe( process.stdout )
		.on( 'close', onClose );
    return;
}


// VERSION //

if ( args.version ) {
	console.log( pkg.version );
	return;
}


// OPTIONS //

opts = {};

inFile = args._[ 0 ];
if ( args.output ) {
	outFile = args.output;
}
if ( args.flavor ) {
	opts.flavor = args.flavor;
}


// CONVERT //

if ( outFile === void 0 ) {
	md2rst( inFile, opts, clbk );
} else {
	md2rst( outFile, inFile, opts, clbk );
}

/**
* FUNCTION: clbk( [error[, results]] )
*	Callback invoked upon attempting to convert an input file.
*
* @private
* @param {Error|Null} [error] - error object
* @param {Buffer} [results] - conversion results
* @returns {Void}
*/
function clbk( error, results ) {
	if ( error ) {
		throw error;
	}
	if ( arguments.length === 2 ) {
		process.stdout.write( results.toString(), 'utf8' );
		process.stdout.write( '\n', 'utf8' );
	}
}
